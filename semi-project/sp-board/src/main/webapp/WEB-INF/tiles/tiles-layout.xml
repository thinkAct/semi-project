<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
        
<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/views/ftl/layout.ftl"
		templateType="freemarker">
		<put-attribute name="header" value="/WEB-INF/views/jsp/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/views/jsp/menu.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/views/jsp/footer.jsp" />
	</definition>
	<definition name="REGEXP:([^/].*)" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/views/ftl/{1}.ftl"
			type="freemarker" />
	</definition>
</tiles-definitions>
